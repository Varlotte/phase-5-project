// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Fave {
  faved_on     DateTime   @default(now())
  unfaved_on   DateTime?
  user         User       @relation(fields: [userId], references: [id])
  userId       Int
  medication   Medication @relation(fields: [medicationId], references: [id])
  medicationId Int

  @@id([userId, medicationId])
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  password String
  birthday DateTime
  // somehow only shows faves affiliated with this user id
  faves    Fave[]
  //TODO: currMeds, currConditions, notes TBD
}

model Medication {
  id            Int         @id @default(autoincrement())
  nameBrand     String      @unique
  nameGeneric   String      @unique
  class         String
  prescribedFor String
  sideEffects   String
  image         String
  // points back to intermediate fave table
  faves         Fave[]
  // implicit many-to-many relationship between medications and treatments
  conditions    Condition[]
}

model Condition {
  id          Int          @id @default(autoincrement())
  name        String       @unique
  description String
  medications Medication[]
}
